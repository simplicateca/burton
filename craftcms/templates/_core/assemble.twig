            {% if settings.autoplay|default() %}autoplay{% endif %}
            class="block w-full max-w-4xl bg-[#f1f3f4] rounded-none"
            ><source src="{{ asset.url ?? null }}" type="{{ asset.mimeType ?? null }}" />
        </audio>
    {%- endif -%}
{% endmacro %}
